




PROGRAM SUMA_RESTA;
USES CRT;
VAR
A, B, SUMA, RESTA :INTEGER;
BEGIN
CLRSCR;
WRITELN('INTRODUCE EL PRIMER NUMERO');
READLN(A);
WRITELN('INTRODUCE EL SEGUNDO NUMERO');
READLN(B);
IF A>B THEN
   BEGIN
     RESTA:=A-B;
     WRITELN('LA RESTA ES ', RESTA);
   END
 ELSE
   BEGIN
     SUMA:=A+B;
     WRITELN('LA SUMA ES ', SUMA);
   END;
READKEY;
END.
